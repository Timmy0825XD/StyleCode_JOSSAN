@using ENTITY.Pedidos
@using ENTITY.Utilidades
@using BLL.Interfaces

@if (MostrarModal)
{
    <div class="modal-overlay" @onclick="Cerrar">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>🧾 Generar Factura Electrónica</h3>
                <button class="btn-close" @onclick="Cerrar">✕</button>
            </div>

            <div class="modal-body">
                @if (isLoading)
                {
                    <div class="loading">
                        <div class="spinner"></div>
                        <p>Generando factura electrónica...</p>
                        <p class="loading-detail">Esto puede tomar unos segundos</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-box">
                        <p>❌ @errorMessage</p>
                    </div>
                }
                else if (pedido != null)
                {
                    <div class="pedido-info">
                        <h4>📦 Información del Pedido</h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <span class="label">Número de Pedido:</span>
                                <span class="value">@pedido.NumeroPedido</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Cliente:</span>
                                <span class="value">@pedido.NombreCliente</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Correo:</span>
                                <span class="value">@pedido.CorreoCliente</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Total:</span>
                                <span class="value total">@pedido.Total.ToString("C")</span>
                            </div>
                        </div>

                        <h4 class="mt-3">🛍️ Productos (@pedido.Productos.Count)</h4>
                        <div class="productos-lista">
                            @foreach (var producto in pedido.Productos)
                            {
                                <div class="producto-item">
                                    <span class="producto-nombre">@producto.NombreProducto</span>
                                    <span class="producto-detalle">
                                        @producto.Cantidad x @producto.PrecioUnitario.ToString("C") =
                                        <strong>@producto.SubtotalLinea.ToString("C")</strong>
                                    </span>
                                </div>
                            }
                        </div>

                        <div class="totales">
                            <div class="total-row">
                                <span>Subtotal:</span>
                                <span>@pedido.Subtotal.ToString("C")</span>
                            </div>
                            <div class="total-row">
                                <span>Impuesto (IVA 19%):</span>
                                <span>@pedido.Impuesto.ToString("C")</span>
                            </div>
                            <div class="total-row">
                                <span>Costo de Envío:</span>
                                <span>@pedido.CostoEnvio.ToString("C")</span>
                            </div>
                            <div class="total-row final">
                                <span><strong>TOTAL:</strong></span>
                                <span><strong>@pedido.Total.ToString("C")</strong></span>
                            </div>
                        </div>

                        <div class="warning-box">
                            <p>⚠️ <strong>Importante:</strong></p>
                            <p>Se generará una factura electrónica en Factus y se enviará a la DIAN.</p>
                            <p>Esta acción no se puede deshacer.</p>
                        </div>
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="Cerrar" disabled="@isLoading">
                    Cancelar
                </button>
                <button class="btn btn-primary" @onclick="GenerarFactura" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span>Generando...</span>
                    }
                    else
                    {
                        <span>✓ Generar Factura</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

