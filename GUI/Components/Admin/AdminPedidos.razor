@page "/AdminPedidos"
@using System.Collections.Generic

<div class="container">
    <div class="header-section">
        <h2 class="page-title">Gestión de Pedidos</h2>
        <button class="btn-primary" @onclick="NuevoPedido">
            <span class="icon">➕</span>
            Nuevo Pedido
        </button>
    </div>

    <div class="content-card">
        <div class="filters-row">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text"
                       placeholder="Buscar pedidos..."
                       class="search-input"
                       @bind="searchTerm"
                       @bind:event="oninput" />
            </div>
            <div class="filter-group">
                <select class="filter-select" @bind="filterStatus">
                    <option value="">Todos los estados</option>
                    <option value="pending">Pendiente</option>
                    <option value="processing">En Proceso</option>
                    <option value="shipped">Enviado</option>
                    <option value="delivered">Entregado</option>
                    <option value="cancelled">Cancelado</option>
                </select>
                <input type="date" class="filter-date" />
            </div>
            <button class="btn-secondary">
                <span class="icon">📥</span>
                Exportar
            </button>
        </div>

        <div class="table-wrapper">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID Pedido</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pedido in PedidosFiltrados)
                    {
                        <tr class="table-row">
                            <td class="order-id">@pedido.Id</td>
                            <td class="customer-info">
                                <div class="customer-name">@pedido.NombreCliente</div>
                                <div class="customer-email">@pedido.EmailCliente</div>
                            </td>
                            <td class="order-date">@pedido.Fecha.ToString("dd/MM/yyyy")</td>
                            <td class="order-total">$@pedido.Total.ToString("N2")</td>
                            <td>
                                <select class="status-select @GetStatusClass(pedido.Estado)"
                                        @onchange="@((e) => CambiarEstado(pedido, e.Value.ToString()))">
                                    <option value="pending" selected="@(pedido.Estado == "pending")">Pendiente</option>
                                    <option value="processing" selected="@(pedido.Estado == "processing")">En Proceso</option>
                                    <option value="shipped" selected="@(pedido.Estado == "shipped")">Enviado</option>
                                    <option value="delivered" selected="@(pedido.Estado == "delivered")">Entregado</option>
                                    <option value="cancelled" selected="@(pedido.Estado == "cancelled")">Cancelado</option>
                                </select>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-view" @onclick="() => VerDetalles(pedido)" title="Ver Detalles">
                                        <span>👁️</span>
                                    </button>
                                    <button class="btn-action btn-edit" @onclick="() => EditarPedido(pedido)" title="Editar">
                                        <span>✏️</span>
                                    </button>
                                    <button class="btn-action btn-invoice" @onclick="() => GenerarFactura(pedido)" title="Generar Factura">
                                        <span>📄</span>
                                    </button>
                                    <button class="btn-action btn-delete" @onclick="() => EliminarPedido(pedido)" title="Eliminar">
                                        <span>🗑️</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!PedidosFiltrados.Any())
        {
            <div class="empty-state">
                <span class="empty-icon">📦</span>
                <p>No se encontraron pedidos</p>
            </div>
        }
    </div>

    @if (mostrarDetalles && pedidoSeleccionado != null)
    {
        <div class="modal-overlay" @onclick="CerrarDetalles">
            <div class="modal-content" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>Detalles del Pedido @pedidoSeleccionado.Id</h3>
                    <button class="btn-close" @onclick="CerrarDetalles">✕</button>
                </div>
                <div class="modal-body">
                    <div class="detail-section">
                        <h4>Información del Cliente</h4>
                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">Nombre:</span>
                                <span class="detail-value">@pedidoSeleccionado.NombreCliente</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Email:</span>
                                <span class="detail-value">@pedidoSeleccionado.EmailCliente</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Teléfono:</span>
                                <span class="detail-value">@pedidoSeleccionado.TelefonoCliente</span>
                            </div>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h4>Información del Pedido</h4>
                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">ID:</span>
                                <span class="detail-value">@pedidoSeleccionado.Id</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Fecha:</span>
                                <span class="detail-value">@pedidoSeleccionado.Fecha.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Estado:</span>
                                <span class="detail-value status-badge @GetStatusClass(pedidoSeleccionado.Estado)">
                                    @GetStatusText(pedidoSeleccionado.Estado)
                                </span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Total:</span>
                                <span class="detail-value total-amount">$@pedidoSeleccionado.Total.ToString("N2")</span>
                            </div>
                        </div>
                    </div>

                    <div class="detail-section">
                        <h4>Productos</h4>
                        <div class="products-list">
                            @foreach (var item in pedidoSeleccionado.Items)
                            {
                                <div class="product-item">
                                    <div class="product-info">
                                        <span class="product-name">@item.ProductoNombre</span>
                                        <span class="product-quantity">x@item.Cantidad</span>
                                    </div>
                                    <span class="product-price">$@item.PrecioUnitario.ToString("N2")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

