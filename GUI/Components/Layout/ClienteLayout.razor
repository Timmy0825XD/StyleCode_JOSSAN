@using BLL.Interfaces
@using ENTITY.Usuarios
@inherits LayoutComponentBase
@inject IUsuarioService UsuarioService
@inject NavigationManager Navigation

<div class="cliente-layout">
    <header class="navbar-header">
        <div class="navbar-container">
            <div class="navbar-brand">
                <button class="menu-toggle" @onclick="ToggleSidebar">
                    <span class="hamburger-icon">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </button>
                <a href="/ClienteCatalogo" class="brand-logo">
                    <span class="logo-icon">🛍️</span>
                    <span class="logo-text">Tienda JOSSAN</span>
                </a>
            </div>

            <div class="navbar-search">
                <div class="search-box">
                    <span class="search-icon">🔍</span>
                    <input type="text" placeholder="Buscar productos..." class="search-input" />
                </div>
            </div>

            <div class="navbar-actions">
                <button class="action-btn" @onclick="IrAInicio">
                    <span class="action-icon">🏠</span>
                    <span class="action-text">Inicio</span>
                </button>

                <button class="action-btn" @onclick="IrAlCarrito">
                    <span class="action-icon">🛒</span>
                    <span class="action-text">Carrito</span>
                    <span class="badge-count">0</span>
                </button>

                <div class="user-dropdown" @onclick="ToggleUserMenu">
                    <div class="user-trigger">
                        <div class="user-avatar">
                            @GetInitials(UserDisplayName)
                        </div>
                        <div class="user-info">
                            <span class="user-name">@UserDisplayName</span>
                            <span class="user-role">Cliente</span>
                        </div>
                        <span class="dropdown-arrow @(showUserMenu ? "open" : "")">▼</span>
                    </div>

                    @if (showUserMenu)
                    {
                        <div class="dropdown-menu">
                            <a href="/perfil" class="dropdown-item">
                                <span class="item-icon">👤</span>
                                <span>Mi Perfil</span>
                            </a>
                            <a href="/mis-pedidos" class="dropdown-item">
                                <span class="item-icon">📦</span>
                                <span>Mis Pedidos</span>
                            </a>
                            <a href="/favoritos" class="dropdown-item">
                                <span class="item-icon">❤️</span>
                                <span>Favoritos</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="/configuracion" class="dropdown-item">
                                <span class="item-icon">⚙️</span>
                                <span>Configuración</span>
                            </a>
                            <button class="dropdown-item logout" @onclick="CerrarSesion">
                                <span class="item-icon">🚪</span>
                                <span>Cerrar Sesión</span>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>

    @if (showSidebar)
    {
        <div class="sidebar-overlay" style="margin-top:20px" @onclick="ToggleSidebar"></div>
    }

    <aside class="sidebar @(showSidebar ? "open" : "")">
        <div class="sidebar-header">
            <span class="sidebar-title">Navegación</span>
            <button class="close-sidebar" @onclick="ToggleSidebar">✕</button>
        </div>

        <nav class="sidebar-nav">
            <a href="/ClienteCatalogo" class="nav-item @(IsActive("/ClienteCatalogo") ? "active" : "")">
                <span class="nav-icon">🏠</span>
                <span class="nav-text">Inicio</span>
            </a>

            <a href="/ofertas" class="nav-item @(IsActive("/ofertas") ? "active" : "")">
                <span class="nav-icon">🏷️</span>
                <span class="nav-text">Virtual Try On</span>
            </a>

            <a href="/mis-pedidos" class="nav-item @(IsActive("/mis-pedidos") ? "active" : "")">
                <span class="nav-icon">📦</span>
                <span class="nav-text">Mis Pedidos</span>
            </a>

            <a href="/favoritos" class="nav-item @(IsActive("/favoritos") ? "active" : "")">
                <span class="nav-icon">❤️</span>
                <span class="nav-text">Favoritos</span>
            </a>

            <div class="nav-divider"></div>

            <a href="/ayuda" class="nav-item @(IsActive("/ayuda") ? "active" : "")">
                <span class="nav-icon">❓</span>
                <span class="nav-text">Asistente Virtual</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="promo-card">
                <div class="promo-icon">🎁</div>
                <h4>¡Envío Gratis!</h4>
                <p>En compras mayores a $50.000</p>
            </div>
        </div>
    </aside>

    <main class="main-content @(showSidebar ? "sidebar-open" : "")">
        <div class="content-wrapper">
            @Body
        </div>

        <footer class="content-footer">
            <div class="footer-content">
                <div class="footer-section">
                    <p class="copyright">© 2025 Mi Tienda. Todos los derechos reservados.</p>
                </div>
                <div class="footer-links">
                    <a href="/terminos">Términos</a>
                    <a href="/privacidad">Privacidad</a>
                    <a href="/ayuda">Ayuda</a>
                </div>
            </div>
        </footer>
    </main>
</div>

<style>
    :root {
        --primary: #667eea;
        --primary-dark: #5568d3;
        --secondary: #764ba2;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
        --text-dark: #1f2937;
        --text-medium: #6b7280;
        --text-light: #9ca3af;
        --bg-page: #f9fafb;
        --bg-white: #ffffff;
        --border: #e5e7eb;
        --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 6px rgba(0,0,0,0.07);
        --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
        --shadow-xl: 0 20px 25px rgba(0,0,0,0.15);
        --navbar-height: 70px;
        --sidebar-width: 260px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background: var(--bg-page);
    }

    .cliente-layout {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .navbar-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: var(--navbar-height);
        background: var(--bg-white);
        border-bottom: 1px solid var(--border);
        box-shadow: var(--shadow-sm);
        z-index: 1000;
    }

    .navbar-container {
        max-width: 100%;
        height: 100%;
        padding: 0 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 24px;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .menu-toggle {
        display: none;
        width: 44px;
        height: 44px;
        border: none;
        background: none;
        cursor: pointer;
        padding: 8px;
    }

    .hamburger-icon {
        display: flex;
        flex-direction: column;
        gap: 5px;
        width: 100%;
    }

        .hamburger-icon span {
            display: block;
            width: 100%;
            height: 3px;
            background: var(--text-dark);
            border-radius: 2px;
            transition: all 0.3s;
        }

    .brand-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 20px;
        color: var(--text-dark);
        transition: all 0.3s;
    }

        .brand-logo:hover {
            color: var(--primary);
        }

    .logo-icon {
        font-size: 28px;
    }

    .logo-text {
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .navbar-search {
        flex: 1;
        max-width: 500px;
    }

    .search-box {
        position: relative;
        width: 100%;
    }

    .search-icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
        color: var(--text-medium);
    }

    .search-input {
        width: 100%;
        height: 44px;
        padding: 0 16px 0 48px;
        border: 2px solid var(--border);
        border-radius: 22px;
        font-size: 14px;
        background: var(--bg-page);
        transition: all 0.3s;
    }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            background: var(--bg-white);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .navbar-actions {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .action-btn {
        position: relative;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 16px;
        border: none;
        background: transparent;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s;
        color: var(--text-dark);
        font-weight: 600;
        font-size: 14px;
    }

        .action-btn:hover {
            background: var(--bg-page);
            color: var(--primary);
        }

    .action-icon {
        font-size: 20px;
    }

    .badge-count {
        position: absolute;
        top: 4px;
        right: 8px;
        min-width: 20px;
        height: 20px;
        padding: 0 6px;
        background: linear-gradient(135deg, var(--danger) 0%, #dc2626 100%);
        color: white;
        border-radius: 10px;
        font-size: 11px;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: var(--shadow-md);
    }

    .user-dropdown {
        position: relative;
    }

    .user-trigger {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 8px 12px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .user-trigger:hover {
            background: var(--bg-page);
        }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 14px;
        box-shadow: var(--shadow-md);
    }

    .user-info {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .user-name {
        font-size: 14px;
        font-weight: 600;
        color: var(--text-dark);
        line-height: 1.2;
    }

    .user-role {
        font-size: 12px;
        color: var(--text-medium);
        line-height: 1.2;
    }

    .dropdown-arrow {
        font-size: 10px;
        color: var(--text-medium);
        transition: transform 0.3s;
    }

        .dropdown-arrow.open {
            transform: rotate(180deg);
        }

    .dropdown-menu {
        position: absolute;
        top: calc(100% + 8px);
        right: 0;
        min-width: 220px;
        background: var(--bg-white);
        border: 1px solid var(--border);
        border-radius: 12px;
        box-shadow: var(--shadow-xl);
        padding: 8px;
        animation: dropdownFadeIn 0.2s ease-out;
        z-index: 1001;
    }

    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        border-radius: 8px;
        text-decoration: none;
        color: var(--text-dark);
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s;
        border: none;
        background: none;
        width: 100%;
        text-align: left;
        cursor: pointer;
    }

        .dropdown-item:hover {
            background: var(--bg-page);
            color: var(--primary);
        }

        .dropdown-item.logout {
            color: var(--danger);
        }

            .dropdown-item.logout:hover {
                background: rgba(239, 68, 68, 0.1);
            }

    .item-icon {
        font-size: 18px;
    }

    .dropdown-divider {
        height: 1px;
        background: var(--border);
        margin: 8px 0;
    }

    .sidebar {
        position: fixed;
        top: var(--navbar-height);
        left: 0;
        width: var(--sidebar-width);
        height: calc(100vh - var(--navbar-height));
        background: var(--bg-white);
        border-right: 1px solid var(--border);
        overflow-y: auto;
        transition: transform 0.3s ease;
        z-index: 900;
    }

    .sidebar-overlay {
        display: none;
    }

    .sidebar-header {
        display: none;
        padding: 20px;
        border-bottom: 1px solid var(--border);
    }

    .close-sidebar {
        display: none;
    }

    .sidebar-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
    }

    .sidebar-nav {
        padding: 16px 12px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        border-radius: 10px;
        text-decoration: none;
        color: var(--text-medium);
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s;
        margin-bottom: 4px;
        position: relative;
    }

        .nav-item:hover {
            background: var(--bg-page);
            color: var(--text-dark);
        }

        .nav-item.active {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            color: var(--primary);
            font-weight: 700;
        }

            .nav-item.active::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 4px;
                height: 60%;
                background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
                border-radius: 0 4px 4px 0;
            }

    .nav-icon {
        font-size: 20px;
    }

    .nav-text {
        flex: 1;
    }

    .nav-badge {
        padding: 2px 8px;
        background: var(--warning);
        color: white;
        border-radius: 8px;
        font-size: 10px;
        font-weight: 700;
    }

    .nav-divider {
        height: 1px;
        background: var(--border);
        margin: 12px 16px;
    }

    .sidebar-footer {
        padding: 16px;
        border-top: 1px solid var(--border);
    }

    .promo-card {
        padding: 20px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        border-radius: 12px;
        text-align: center;
        color: white;
    }

    .promo-icon {
        font-size: 36px;
        margin-bottom: 8px;
    }

    .promo-card h4 {
        font-size: 16px;
        font-weight: 700;
        margin: 0 0 4px 0;
    }

    .promo-card p {
        font-size: 13px;
        margin: 0;
        opacity: 0.9;
    }

    .main-content {
        margin-top: var(--navbar-height);
        margin-left: var(--sidebar-width);
        min-height: calc(100vh - var(--navbar-height));
        display: flex;
        flex-direction: column;
        transition: margin-left 0.3s ease;
    }

    .content-wrapper {
        flex: 1;
        padding: 0;
    }

    .content-footer {
        background: var(--bg-white);
        border-top: 1px solid var(--border);
        padding: 24px 32px;
        margin-top: 60px;
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
    }

    .copyright {
        font-size: 14px;
        color: var(--text-medium);
    }

    .footer-links {
        display: flex;
        gap: 24px;
    }

        .footer-links a {
            font-size: 14px;
            color: var(--text-medium);
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer-links a:hover {
                color: var(--primary);
            }

    @@keyframes dropdownFadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 1024px) {
        .navbar-search {
            display: none;
        }

        .action-text {
            display: none;
        }

        .sidebar {
            transform: translateX(-100%);
        }

            .sidebar.open {
                transform: translateX(0);
            }

        .sidebar-overlay {
            display: block;
            position: fixed;
            top: var(--navbar-height);
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 899;
            animation: fadeIn 0.3s;
        }

        .main-content {
            margin-left: 0;
        }

        .menu-toggle {
            display: flex;
        }

        .sidebar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .close-sidebar {
            display: block;
            width: 32px;
            height: 32px;
            border: none;
            background: var(--bg-page);
            border-radius: 8px;
            cursor: pointer;
            font-size: 18px;
            color: var(--text-dark);
        }
    }

    @@media (max-width: 768px) {
        .navbar-container {
            padding: 0 16px;
        }

        .user-info {
            display: none;
        }

        .dropdown-arrow {
            display: none;
        }

        .content-footer {
            padding: 20px 16px;
        }

        .footer-content {
            flex-direction: column;
            text-align: center;
        }
    }

    @@media (max-width: 480px) {
        .logo-text {
            display: none;
        }

        .action-btn {
            padding: 10px;
        }

        .content-footer {
            padding: 16px;
        }

        .footer-links {
            flex-direction: column;
            gap: 12px;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

@code {
    private string UserDisplayName { get; set; } = "Cliente";
    private bool showUserMenu = false;
    private bool showSidebar = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            UserDisplayName = UsuarioService.ObtenerNombreUsuario();
        }
        catch (Exception ex)
        {
            UserDisplayName = "Usuario";
            Console.WriteLine($"Error al obtener nombre: {ex.Message}");
        }
    }

    private void IrAInicio()
    {
        Navigation.NavigateTo("/ClienteCatalogo");
    }

    private void IrAlCarrito()
    {
        Navigation.NavigateTo("/carrito");
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "CL";

        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();

        return name.Length >= 2 ? name.Substring(0, 2).ToUpper() : name.ToUpper();
    }

    private void ToggleUserMenu()
    {
        showUserMenu = !showUserMenu;
    }

    private void ToggleSidebar()
    {
        showSidebar = !showSidebar;
    }

    private bool IsActive(string path)
    {
        return Navigation.Uri.Contains(path, StringComparison.OrdinalIgnoreCase);
    }

    private void CerrarSesion()
    {
        Navigation.NavigateTo("/login", true);
    }
}
