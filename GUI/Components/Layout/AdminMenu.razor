@using BLL.Implementaciones
@using BLL.Interfaces
@using GUI.Services
@inject IUsuarioService UsuarioService
@inject SesionService SesionService
@inject NavigationManager Navigation

<aside>
    <div class="sidebar-logo">
        <div class="logo-circle">V</div>
        <div class="logo-text">
            <div class="logo-title">JOSSAN</div>
            <div style="color:grey">Admin Panel</div>
        </div>
    </div>
    <nav class="sidebar-nav">
        <NavLink class="nav-item" href="AdminDashboard">
            <span style="font-size: 22px"><Icon Name="IconName.Dashboard" /></span>
            <span>Dashboard</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminProductos">
            <span style="font-size: 22px"><Icon Name="IconName.Store" /></span>
            <span>Productos</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminPedidos">
            <span style="font-size: 22px"><Icon Name="IconName.ShoppingBasket" /></span>
            <span>Pedidos</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminClientes">
            <span style="font-size: 22px"><Icon Name="IconName.User" /></span>
            <span>Clientes</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminFacturas">
            <span style="font-size: 22px"><Icon Name="IconName.File" /></span>
            <span>Facturas</span>
        </NavLink>
        <NavLink class="nav-item" href="ListaAlertas">
            <span style="font-size: 22px"><Icon Name="IconName.Bell" /></span>
            <span>Alertas</span>
        </NavLink>
    </nav>
    <button class="logout-btn" @onclick="CerrarSesion">
        <span class="logout-icon"><Icon Name="IconName.AngleLeft" /></span>
        <span>Cerrar Sesión</span>
    </button>
</aside>

<style>
    .nav-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 14px 20px;
        border-radius: 12px;
        color: #6b7280;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .nav-item:hover {
            background-color: #f3f4f6;
            transform: translateX(5px);
        }

        .nav-item.active {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
            color: white;
        }
</style>

@code {
    private async Task CerrarSesion()
    {
        try
        {
            await SesionService.CerrarSesion();
            UsuarioService.CerrarSesion();


            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            Navigation.NavigateTo("/", forceLoad: true);
        }
    }
}
