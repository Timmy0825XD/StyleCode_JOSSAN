@using BLL.Implementaciones
@using BLL.Interfaces
@using GUI.Services
@inject IUsuarioService UsuarioService
@inject SesionService SesionService
@inject NavigationManager Navigation

<aside>

    <div class="sidebar-logo">
        <div class="logo-circle">V</div>
        <div class="logo-text">
            <div class="logo-title">JOSSAN</div>
            <div style="color:grey">Admin Panel</div>
        </div>
    </div>

    <nav class="sidebar-nav">
        <div class="nav-item-container">
            <div class="nav-item @(reportesMenuAbierto ? "active" : "")" @onclick="ToggleReportesMenu">
                <span style="font-size: 22px"><Icon Name="IconName.Dashboard" /></span> Reportes
                <span class="submenu-arrow @(reportesMenuAbierto ? "rotated" : "")">▼</span>
            </div>
            @if (reportesMenuAbierto)
            {
                <div class="submenu">
                    <NavLink class="submenu-item" href="AdminDashboard">
                        <span>Reportes Generales</span>
                    </NavLink>
                    <NavLink class="submenu-item" href="ReportesEspecificos">
                        <span>Reportes Específicos</span>
                    </NavLink>
                </div>
            }
        </div>

        <NavLink class="nav-item" href="AdminProductos">
            <span style="font-size: 22px"><Icon Name="IconName.Store" /></span>
            <span>Productos</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminPedidos">
            <span style="font-size: 22px"><Icon Name="IconName.ShoppingBasket" /></span>
            <span>Pedidos</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminClientes">
            <span style="font-size: 22px"><Icon Name="IconName.User" /></span>
            <span>Clientes</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminFacturas">
            <span style="font-size: 22px"><Icon Name="IconName.File" /></span>
            <span>Facturas</span>
        </NavLink>
        <NavLink class="nav-item" href="AdminCupones">
            <span style="font-size: 22px"><i class="fa-solid fa-ticket"></i></span>
            <span>Cupones</span>
        </NavLink>
        <NavLink class="nav-item" href="ListaAlertas">
            <span style="font-size: 22px"><Icon Name="IconName.Bell" /></span>
            <span>Alertas</span>
        </NavLink>
    </nav>
    <button class="logout-btn" @onclick="CerrarSesion">
        <span class="logout-icon"><Icon Name="IconName.AngleLeft" /></span>
        <span>Cerrar Sesión</span>
    </button>
</aside>

<style>
    .nav-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 14px 20px;
        border-radius: 12px;
        color: #6b7280;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .nav-item:hover {
            background-color: #f3f4f6;
            transform: translateX(5px);
        }

        .nav-item.active {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
            color: white;
        }

    .nav-item-container {
        position: relative;
    }

    .submenu-arrow {
        margin-left: auto;
        font-size: 12px;
        transition: transform 0.3s ease;
    }

        .submenu-arrow.rotated {
            transform: rotate(180deg);
        }

    .submenu {
        margin-left: 20px;
        margin-top: 5px;
        animation: slideDown 0.3s ease;
    }

    .submenu-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 10px 20px;
        padding-left: 50px;
        border-radius: 12px;
        color: #6b7280;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 14px;
    }

        .submenu-item:hover {
            background-color: #f3f4f6;
            transform: translateX(5px);
        }

        .submenu-item.active {
            background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
            color: white;
        }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code {
    private bool reportesMenuAbierto = false;

    private void ToggleReportesMenu()
    {
        reportesMenuAbierto = !reportesMenuAbierto;
    }

    private async Task CerrarSesion()
    {
        try
        {
            await SesionService.CerrarSesion();
            UsuarioService.CerrarSesion();
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            Navigation.NavigateTo("/", forceLoad: true);
        }
    }
}