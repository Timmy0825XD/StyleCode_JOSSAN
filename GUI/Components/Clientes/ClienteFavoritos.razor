@code {
    private List<FavoritoDTO> articulosFavoritos = new();
    private List<string> categorias = new();
    private List<string> marcas = new();

    private bool isLoading = true;
    private bool estaLogueado = false;
    private string? errorMessage = null;
    private int? idUsuarioActual = null;

    private string searchText = "";
    private string selectedCategoria = "";
    private string selectedMarca = "";
    private string sortBy = "reciente";

    private bool mostrarModalAgregar = false;
    private int idArticuloSeleccionado = 0;

    protected override async Task OnInitializedAsync()
    {
        await VerificarSesion();

        if (estaLogueado)
        {
            await CargarFavoritos();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task VerificarSesion()
    {
        estaLogueado = await SesionService.EstaLogueado();
        idUsuarioActual = await SesionService.ObtenerIdUsuario();

        if (!estaLogueado)
        {
            Console.WriteLine("Usuario no logueado");
        }
        else
        {
            Console.WriteLine($" Usuario logueado con ID: {idUsuarioActual}");
        }
    }

    private async Task CargarFavoritos()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            if (idUsuarioActual == null || idUsuarioActual.Value <= 0)
            {
                errorMessage = "No se pudo obtener el ID del usuario";
                return;
            }

            var response = await FavoritoService.ObtenerFavoritosUsuario(idUsuarioActual.Value);

            if (response.IsSuccess && response.ListObject != null)
            {
                articulosFavoritos = response.ListObject.ToList();
                Console.WriteLine($" Favoritos cargados: {articulosFavoritos.Count}");

                if (articulosFavoritos.Any())
                {
                    categorias = articulosFavoritos
                        .Select(a => a.CategoriaTipo)
                        .Distinct()
                        .OrderBy(c => c)
                        .ToList();

                    marcas = articulosFavoritos
                        .Select(a => a.Marca)
                        .Distinct()
                        .OrderBy(m => m)
                        .ToList();
                }
            }
            else
            {
                errorMessage = response.Message ?? "Error al cargar los favoritos";
                Console.WriteLine($" Error: {errorMessage}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($" Excepción en CargarFavoritos: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<FavoritoDTO> ArticulosFiltrados
    {
        get
        {
            var filtrados = articulosFavoritos.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtrados = filtrados.Where(a =>
                    a.Nombre.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    a.Marca.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    (a.Descripcion?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false)
                );
            }

            if (!string.IsNullOrWhiteSpace(selectedCategoria))
            {
                filtrados = filtrados.Where(a => a.CategoriaTipo.Equals(selectedCategoria, StringComparison.OrdinalIgnoreCase));
            }

            if (!string.IsNullOrWhiteSpace(selectedMarca))
            {
                filtrados = filtrados.Where(a => a.Marca.Equals(selectedMarca, StringComparison.OrdinalIgnoreCase));
            }

            return sortBy switch
            {
                "precio_asc" => filtrados.OrderBy(a => a.PrecioBase),
                "precio_desc" => filtrados.OrderByDescending(a => a.PrecioBase),
                "nombre_asc" => filtrados.OrderBy(a => a.Nombre),
                _ => filtrados.OrderByDescending(a => a.FechaAgregado)
            };
        }
    }

    private string GetImageUrl(FavoritoDTO articulo)
    {
        if (!string.IsNullOrEmpty(articulo.ImagenPrincipal))
        {
            return articulo.ImagenPrincipal;
        }
        return "https://images.unsplash.com/photo-1523381210434-271e8be1f52b?w=600&h=800&fit=crop&q=80";
    }

    private async Task QuitarDeFavoritos(int idArticulo)
    {
        if (idUsuarioActual == null) return;

        try
        {
            var response = await FavoritoService.EliminarFavorito(idUsuarioActual.Value, idArticulo);

            if (response.IsSuccess)
            {
                Console.WriteLine($" Favorito eliminado: {idArticulo}");
                await CargarFavoritos(); // Recargar la lista
                StateHasChanged();
            }
            else
            {
                Console.WriteLine($" Error al eliminar favorito: {response.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($" Excepción al eliminar favorito: {ex.Message}");
        }
    }

    private async Task LimpiarTodosFavoritos()
    {
        if (idUsuarioActual == null) return;

        bool confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
            "¿Estás seguro de que deseas eliminar todos tus favoritos?");

        if (!confirmar) return;

        try
        {
            // Eliminar cada favorito uno por uno
            foreach (var favorito in articulosFavoritos.ToList())
            {
                await FavoritoService.EliminarFavorito(idUsuarioActual.Value, favorito.IdArticulo);
            }

            Console.WriteLine(" Todos los favoritos eliminados");
            await CargarFavoritos();
        }
        catch (Exception ex)
        {
            Console.WriteLine($" Error al limpiar favoritos: {ex.Message}");
        }
    }

    private void LimpiarFiltros()
    {
        searchText = "";
        selectedCategoria = "";
        selectedMarca = "";
        sortBy = "reciente";
    }

    private void AgregarAlCarrito(int idArticulo)
    {
        idArticuloSeleccionado = idArticulo;
        mostrarModalAgregar = true;
    }

    private void CerrarModalAgregar()
    {
        mostrarModalAgregar = false;
        idArticuloSeleccionado = 0;
    }

    private void IrACatalogo()
    {
        Navigation.NavigateTo("/");
    }

    private void IrALogin()
    {
        Navigation.NavigateTo("/login");
    }

    public void Dispose()
    {
        // Limpieza si es necesaria
    }
}
