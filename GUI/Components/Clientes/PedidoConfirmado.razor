@page "/pedido-confirmado/{IdPedido:int}"
@using ENTITY.Pedidos
@using BLL.Interfaces
@inject IPedidoService PedidoService
@inject NavigationManager Navigation

<div class="confirmacion-wrapper">
    @if (cargando)
    {
        <div class="loading-state">
            <div class="loading-animation">
                <div class="spinner-elegant"></div>
                <div class="loading-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <p class="loading-text">Cargando información del pedido...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="error-state">
            <div class="error-animation">⚠️</div>
            <h2>¡Algo salió mal!</h2>
            <p class="error-message">@errorMessage</p>
            <button class="btn-action btn-primary" @onclick="VolverAlCatalogo">
                🏠 Volver al Catálogo
            </button>
        </div>
    }
    else if (pedido != null)
    {
        <div class="confirmacion-content">
            <!-- Success Header -->
            <div class="success-header">
                <div class="success-animation">
                    <div class="checkmark-circle">
                        <div class="checkmark"></div>
                    </div>
                </div>
                <h1 class="success-title">¡Pedido Confirmado!</h1>
                <p class="pedido-numero">
                    Orden N° <strong>@pedido.NumeroPedido</strong>
                </p>
                <p class="success-message">
                    Tu pedido ha sido recibido exitosamente y está siendo procesado
                </p>
            </div>

            <!-- Timeline de Estado -->
            <div class="timeline-container">
                <div class="timeline-item completado">
                    <div class="timeline-icon">✓</div>
                    <div class="timeline-content">
                        <h4>Pedido Recibido</h4>
                        <p>@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-icon">📦</div>
                    <div class="timeline-content">
                        <h4>En Preparación</h4>
                        <p>Próximamente</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-icon">🚚</div>
                    <div class="timeline-content">
                        <h4>En Camino</h4>
                        <p>3-5 días hábiles</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-icon">🎉</div>
                    <div class="timeline-content">
                        <h4>Entregado</h4>
                        <p>Te notificaremos</p>
                    </div>
                </div>
            </div>

            <!-- Contenedor Principal -->
            <div class="details-grid">
                <!-- Columna Izquierda: Productos y Envío -->
                <div class="left-column">
                    <!-- Productos -->
                    <div class="section-card productos-section">
                        <div class="section-header">
                            <h3>📦 Tus Productos</h3>
                            <span class="badge-cantidad">@pedido.Productos.Count items</span>
                        </div>
                        <div class="productos-list">
                            @foreach (var producto in pedido.Productos)
                            {
                                <div class="producto-item-modern">
                                    <div class="producto-imagen-wrapper">
                                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                                        {
                                            <img src="@producto.ImagenUrl" alt="@producto.NombreProducto" class="producto-img" />
                                        }
                                        else
                                        {
                                            <div class="producto-placeholder">📦</div>
                                        }
                                    </div>
                                    <div class="producto-detalles">
                                        <h4 class="producto-nombre">@producto.NombreProducto</h4>
                                        <p class="producto-marca">@producto.Marca</p>
                                        <div class="producto-variantes">
                                            <span class="variante-tag">@producto.Talla</span>
                                            <span class="variante-tag">@producto.Color</span>
                                        </div>
                                        <p class="producto-cantidad-texto">Cantidad: <strong>@producto.Cantidad</strong></p>
                                    </div>
                                    <div class="producto-precio-section">
                                        <p class="producto-precio-total">@producto.SubtotalLinea.ToString("C")</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Información de Envío -->
                    <div class="section-card envio-section">
                        <div class="section-header">
                            <h3>🚚 Información de Envío</h3>
                        </div>
                        <div class="envio-detalles">
                            <div class="envio-grupo">
                                <div class="envio-icon">👤</div>
                                <div>
                                    <p class="envio-label">Destinatario</p>
                                    <p class="envio-valor">@pedido.NombreCliente</p>
                                </div>
                            </div>
                            <div class="envio-grupo">
                                <div class="envio-icon">📍</div>
                                <div>
                                    <p class="envio-label">Dirección</p>
                                    <p class="envio-valor">@pedido.DireccionCompleta</p>
                                    <p class="envio-valor-secundario">@pedido.Barrio</p>
                                    <p class="envio-valor-secundario">@pedido.Ciudad, @pedido.Departamento</p>
                                </div>
                            </div>
                            <div class="envio-grupo">
                                <div class="envio-icon">📞</div>
                                <div>
                                    <p class="envio-label">Teléfono</p>
                                    <p class="envio-valor">@pedido.TelefonoPrincipal</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha: Resumen -->
                <div class="right-column">
                    <!-- Resumen de Pago -->
                    <div class="section-card resumen-section sticky">
                        <div class="section-header">
                            <h3>💳 Resumen del Pedido</h3>
                        </div>
                        <div class="resumen-contenido">
                            <div class="resumen-linea">
                                <span class="resumen-label">Subtotal</span>
                                <span class="resumen-valor">@pedido.Subtotal.ToString("C")</span>
                            </div>
                            <div class="resumen-linea">
                                <span class="resumen-label">Envío</span>
                                <span class="resumen-envio-gratis">
                                    <span class="envio-gratis-badge">GRATIS</span>
                                </span>
                            </div>
                            <div class="resumen-linea">
                                <span class="resumen-label">IVA (19%)</span>
                                <span class="resumen-valor">@pedido.Impuesto.ToString("C")</span>
                            </div>
                            <div class="resumen-divider"></div>
                            <div class="resumen-total-linea">
                                <span class="resumen-total-label">Total</span>
                                <span class="resumen-total-valor">@pedido.Total.ToString("C")</span>
                            </div>
                            <div class="metodo-pago-info">
                                <div class="metodo-pago-icon">💰</div>
                                <div>
                                    <p class="metodo-label">Método de pago</p>
                                    <p class="metodo-valor">@pedido.MetodoPago</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Info Boxes -->
                    <div class="info-boxes">
                        <div class="info-box-modern">
                            <div class="info-box-icon">📧</div>
                            <div class="info-box-content">
                                <h4>Confirmación Enviada</h4>
                                <p>Revisa <strong>@pedido.CorreoCliente</strong> para más detalles</p>
                            </div>
                        </div>
                        <div class="info-box-modern">
                            <div class="info-box-icon">⏱️</div>
                            <div class="info-box-content">
                                <h4>Tiempo de Entrega</h4>
                                <p>3-5 días hábiles a partir de hoy</p>
                            </div>
                        </div>
                        <div class="info-box-modern">
                            <div class="info-box-icon">💬</div>
                            <div class="info-box-content">
                                <h4>¿Necesitas Ayuda?</h4>
                                <p>Contáctanos con tu N° de orden</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="acciones-footer">
                <button class="btn-action btn-secondary" @onclick="VerMisPedidos">
                    📋 Ver Mis Pedidos
                </button>
                <button class="btn-action btn-primary" @onclick="VolverAlCatalogo">
                    🛍️ Seguir Comprando
                </button>
            </div>
        </div>
    }
</div>

<style>
    /* ==================== VARIABLES ==================== */
    :root {
        --primary: #667eea;
        --primary-dark: #5568d3;
        --secondary: #764ba2;
        --success: #10b981;
        --success-light: #d1fae5;
        --danger: #ef4444;
        --warning: #f59e0b;
        --text-dark: #1f2937;
        --text-medium: #6b7280;
        --text-light: #9ca3af;
        --bg-page: #f3f4f6;
        --bg-card: #ffffff;
        --border: #e5e7eb;
        --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 6px rgba(0,0,0,0.07);
        --shadow-lg: 0 10px 15px rgba(0,0,0,0.1);
        --shadow-xl: 0 20px 25px rgba(0,0,0,0.15);
    }

    * {
        box-sizing: border-box;
    }

    /* ==================== WRAPPER ==================== */
    .confirmacion-wrapper {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 40%, #f093fb 100%);
        padding: 40px 20px;
    }

    /* ==================== ESTADOS DE CARGA Y ERROR ==================== */
    .loading-state, .error-state {
        max-width: 600px;
        margin: 80px auto;
        background: var(--bg-card);
        padding: 60px 40px;
        border-radius: 24px;
        text-align: center;
        box-shadow: var(--shadow-xl);
        animation: fadeInScale 0.5s ease-out;
    }

    .loading-animation {
        margin-bottom: 32px;
    }

    .spinner-elegant {
        width: 60px;
        height: 60px;
        border: 4px solid var(--border);
        border-top: 4px solid var(--primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 20px;
    }

    .loading-dots {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

        .loading-dots span {
            width: 12px;
            height: 12px;
            background: var(--primary);
            border-radius: 50%;
            animation: bounce 1.4s infinite ease-in-out both;
        }

            .loading-dots span:nth-child(1) {
                animation-delay: -0.32s;
            }

            .loading-dots span:nth-child(2) {
                animation-delay: -0.16s;
            }

    .loading-text {
        font-size: 16px;
        color: var(--text-medium);
        font-weight: 500;
    }

    .error-animation {
        font-size: 80px;
        margin-bottom: 24px;
        animation: shake 0.5s;
    }

    .error-state h2 {
        font-size: 28px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0 0 12px 0;
    }

    .error-message {
        font-size: 16px;
        color: var(--text-medium);
        margin: 0 0 32px 0;
    }

    /* ==================== CONFIRMACIÓN CONTENT ==================== */
    .confirmacion-content {
        max-width: 1200px;
        margin: 0 auto;
        animation: fadeInUp 0.6s ease-out;
    }

    /* ==================== SUCCESS HEADER ==================== */
    .success-header {
        background: var(--bg-card);
        border-radius: 24px;
        padding: 48px 32px;
        text-align: center;
        margin-bottom: 32px;
        box-shadow: var(--shadow-xl);
    }

    .success-animation {
        margin-bottom: 24px;
    }

    .checkmark-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
        animation: scaleIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .checkmark {
        width: 50px;
        height: 30px;
        border-bottom: 6px solid white;
        border-right: 6px solid white;
        transform: rotate(45deg);
        animation: drawCheck 0.5s 0.3s ease-out forwards;
        opacity: 0;
    }

    .success-title {
        font-size: 42px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0 0 16px 0;
    }

    .pedido-numero {
        font-size: 18px;
        color: var(--text-medium);
        margin: 0 0 12px 0;
    }

        .pedido-numero strong {
            color: var(--primary);
            font-weight: 700;
        }

    .success-message {
        font-size: 16px;
        color: var(--text-medium);
        margin: 0;
    }

    /* ==================== TIMELINE ==================== */
    .timeline-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 32px;
    }

    .timeline-item {
        background: var(--bg-card);
        padding: 24px;
        border-radius: 16px;
        text-align: center;
        box-shadow: var(--shadow-md);
        transition: all 0.3s;
        position: relative;
    }

        .timeline-item.completado {
            background: linear-gradient(135deg, var(--success-light) 0%, #f0fdf4 100%);
            border: 2px solid var(--success);
        }

        .timeline-item:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

    .timeline-icon {
        font-size: 36px;
        margin-bottom: 12px;
    }

    .timeline-content h4 {
        font-size: 16px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0 0 6px 0;
    }

    .timeline-content p {
        font-size: 13px;
        color: var(--text-medium);
        margin: 0;
    }

    /* ==================== DETAILS GRID ==================== */
    .details-grid {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 32px;
        margin-bottom: 32px;
    }

    .left-column {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .right-column {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    /* ==================== SECTION CARDS ==================== */
    .section-card {
        background: var(--bg-card);
        border-radius: 20px;
        padding: 28px;
        box-shadow: var(--shadow-lg);
        transition: all 0.3s;
    }

        .section-card:hover {
            box-shadow: var(--shadow-xl);
        }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 16px;
        border-bottom: 2px solid var(--border);
    }

        .section-header h3 {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0;
        }

    .badge-cantidad {
        padding: 6px 14px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 700;
    }

    /* ==================== PRODUCTOS ==================== */
    .productos-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .producto-item-modern {
        display: grid;
        grid-template-columns: 100px 1fr auto;
        gap: 20px;
        padding: 16px;
        background: var(--bg-page);
        border-radius: 16px;
        transition: all 0.3s;
    }

        .producto-item-modern:hover {
            background: #f9fafb;
            transform: translateX(4px);
        }

    .producto-imagen-wrapper {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        overflow: hidden;
        background: white;
        box-shadow: var(--shadow-sm);
    }

    .producto-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .producto-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        background: var(--border);
    }

    .producto-detalles {
        display: flex;
        flex-direction: column;
        gap: 6px;
        justify-content: center;
    }

    .producto-nombre {
        font-size: 16px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
    }

    .producto-marca {
        font-size: 13px;
        color: var(--primary);
        font-weight: 600;
        margin: 0;
    }

    .producto-variantes {
        display: flex;
        gap: 8px;
        margin: 4px 0;
    }

    .variante-tag {
        padding: 4px 10px;
        background: white;
        color: var(--text-medium);
        border-radius: 8px;
        font-size: 12px;
        font-weight: 500;
        border: 1px solid var(--border);
    }

    .producto-cantidad-texto {
        font-size: 13px;
        color: var(--text-medium);
        margin: 0;
    }

    .producto-precio-section {
        display: flex;
        align-items: center;
    }

    .producto-precio-total {
        font-size: 20px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    /* ==================== ENVÍO ==================== */
    .envio-detalles {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .envio-grupo {
        display: flex;
        gap: 16px;
        padding: 16px;
        background: var(--bg-page);
        border-radius: 12px;
    }

    .envio-icon {
        font-size: 28px;
        flex-shrink: 0;
    }

    .envio-label {
        font-size: 12px;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        margin: 0 0 4px 0;
    }

    .envio-valor {
        font-size: 15px;
        color: var(--text-dark);
        font-weight: 600;
        margin: 0;
    }

    .envio-valor-secundario {
        font-size: 14px;
        color: var(--text-medium);
        margin: 2px 0 0 0;
    }

    /* ==================== RESUMEN ==================== */
    .sticky {
        position: sticky;
        top: 24px;
    }

    .resumen-contenido {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .resumen-linea {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 15px;
    }

    .resumen-label {
        color: var(--text-medium);
    }

    .resumen-valor {
        font-weight: 600;
        color: var(--text-dark);
    }

    .envio-gratis-badge {
        padding: 4px 12px;
        background: linear-gradient(135deg, var(--success) 0%, #059669 100%);
        color: white;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .resumen-divider {
        height: 2px;
        background: linear-gradient(to right, transparent, var(--border), transparent);
        margin: 8px 0;
    }

    .resumen-total-linea {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        border-radius: 12px;
    }

    .resumen-total-label {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
    }

    .resumen-total-valor {
        font-size: 28px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .metodo-pago-info {
        display: flex;
        gap: 16px;
        align-items: center;
        padding: 16px;
        background: var(--bg-page);
        border-radius: 12px;
        margin-top: 8px;
    }

    .metodo-pago-icon {
        font-size: 28px;
    }

    .metodo-label {
        font-size: 12px;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 0 0 4px 0;
    }

    .metodo-valor {
        font-size: 15px;
        color: var(--text-dark);
        font-weight: 700;
        margin: 0;
    }

    /* ==================== INFO BOXES ==================== */
    .info-boxes {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .info-box-modern {
        display: flex;
        gap: 16px;
        padding: 20px;
        background: var(--bg-card);
        border: 2px solid var(--border);
        border-radius: 16px;
        transition: all 0.3s;
        box-shadow: var(--shadow-sm);
    }

        .info-box-modern:hover {
            border-color: var(--primary);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .info-box-icon {
        font-size: 32px;
        flex-shrink: 0;
    }

    .info-box-content h4 {
        font-size: 15px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0 0 6px 0;
    }

    .info-box-content p {
        font-size: 13px;
        color: var(--text-medium);
        margin: 0;
        line-height: 1.5;
    }

    /* ==================== ACCIONES FOOTER ==================== */
    .acciones-footer {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 16px 32px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: var(--shadow-md);
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
        }

    .btn-secondary {
        background: var(--bg-card);
        color: var(--primary);
        border: 2px solid var(--primary);
    }

        .btn-secondary:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
        }

    /* ==================== ANIMACIONES ==================== */
    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes spin {
