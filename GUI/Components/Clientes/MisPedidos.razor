</style>

@code {
    private List<PedidoDTO> pedidos = new();
    private PedidoCompletoDTO? pedidoSeleccionado;
    private PedidoDTO? pedidoParaCancelar;

    private string searchTerm = "";
    private string filterStatus = "";

    private bool cargando = true;
    private bool mostrarDetalles = false;
    private bool mostrarConfirmacion = false;
    private string? errorMessage;

    private int? idUsuarioActual;

    protected override async Task OnInitializedAsync()
    {
        await VerificarSesion();
        await CargarPedidos();
    }

    private async Task VerificarSesion()
    {
        try
        {
            idUsuarioActual = await SesionService.ObtenerIdUsuario();

            if (!idUsuarioActual.HasValue)
            {
                Navigation.NavigateTo("/login");
                return;
            }
        }
        catch (Exception ex)
        {
            Navigation.NavigateTo("/login");
        }
    }

    private async Task CargarPedidos()
    {
        if (!idUsuarioActual.HasValue) return;

        try
        {
            cargando = true;
            errorMessage = null;

            var response = await PedidoService.ObtenerPedidosUsuario(idUsuarioActual.Value);

            if (response.IsSuccess && response.ListObject != null)
            {
                pedidos = response.ListObject.ToList();
            }
            else
            {
                errorMessage = response.Message ?? "Error al cargar tus pedidos";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            cargando = false;
        }
    }

    private IEnumerable<PedidoDTO> PedidosFiltrados
    {
        get
        {
            var resultado = pedidos.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                resultado = resultado.Where(p =>
                    p.NumeroPedido.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                );
            }

            if (!string.IsNullOrWhiteSpace(filterStatus))
            {
                resultado = resultado.Where(p => p.Estado == filterStatus);
            }

            return resultado.OrderByDescending(p => p.FechaPedido);
        }
    }

    private async Task VerDetalles(PedidoDTO pedido)
    {
        try
        {
            cargando = true;
            var response = await PedidoService.ObtenerPedidoCompleto(pedido.Id);

            if (response.IsSuccess && response.Object != null)
            {
                pedidoSeleccionado = response.Object;
                mostrarDetalles = true;
            }
            else
            {
                errorMessage = response.Message ?? "Error al cargar los detalles del pedido";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            cargando = false;
        }
    }

    private void CerrarDetalles()
    {
        mostrarDetalles = false;
        pedidoSeleccionado = null;
    }

    private void MostrarConfirmacionCancelacion(PedidoDTO pedido)
    {
        pedidoParaCancelar = pedido;
        mostrarConfirmacion = true;
    }

    private void CerrarConfirmacion()
    {
        mostrarConfirmacion = false;
        pedidoParaCancelar = null;
    }

    private async Task ConfirmarCancelacion()
    {
        if (pedidoParaCancelar == null) return;

        try
        {
            var response = await PedidoService.CancelarPedido(pedidoParaCancelar.Id);

            if (response.IsSuccess)
            {
                await CargarPedidos();
                CerrarConfirmacion();
            }
            else
            {
                errorMessage = response.Message;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cancelar pedido: {ex.Message}";
        }
    }

    private void IrATienda()
    {
        Navigation.NavigateTo("/");
    }

    private string GetStatusClass(string status)
    {
        return status;
    }
}