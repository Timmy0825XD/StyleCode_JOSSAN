@page "/checkout"
@using ENTITY.Pedidos
@using ENTITY.Direcciones
@using ENTITY.Usuarios
@using GUI.Components.Layout
@using GUI.Services
@using BLL.Interfaces
@layout ClienteLayout
@inject CarritoService Carrito
@inject IPedidoService PedidoService
@inject IUsuarioService UsuarioService
@inject NavigationManager Navigation
@inject SesionService Sesion

<div class="checkout-container">
    <div class="checkout-header">
        <button class="btn-back" @onclick="VolverAlCarrito">
            ← Volver al Carrito
        </button>
        <h2>Finalizar Compra</h2>
    </div>

    @if (Carrito.EstaVacio())
    {
        <div class="carrito-vacio">
            <h3>Tu carrito está vacío</h3>
            <p>Agrega productos antes de continuar</p>
            <button class="btn-primary" @onclick="IrAlCatalogo">
                Ver Productos
            </button>
        </div>
    }
    else
    {
        <div class="checkout-content">
            <div class="checkout-form">
                <div class="steps">
                    <div class="step @(pasoActual >= 1 ? "active" : "")">
                        <div class="step-number">1</div>
                        <span>Dirección</span>
                    </div>
                    <div class="step-line @(pasoActual >= 2 ? "active" : "")"></div>
                    <div class="step @(pasoActual >= 2 ? "active" : "")">
                        <div class="step-number">2</div>
                        <span>Pago</span>
                    </div>
                    <div class="step-line @(pasoActual >= 3 ? "active" : "")"></div>
                    <div class="step @(pasoActual >= 3 ? "active" : "")">
                        <div class="step-number">3</div>
                        <span>Confirmar</span>
                    </div>
                </div>

                @if (pasoActual == 1)
                {
                    <div class="form-section">
                        <h3>Dirección de Envío</h3>

                        @if (cargandoDireccion)
                        {
                            <div class="loading-small">
                                <div class="spinner-small"></div>
                                <p>Cargando dirección...</p>
                            </div>
                        }
                        else if (usuarioConDireccion != null && usuarioConDireccion.IdDireccion.HasValue)
                        {
                            <div class="direccion-card selected">
                                <div class="direccion-info">
                                    <h4>Dirección Principal</h4>
                                    <p>@usuarioConDireccion.DireccionCompleta</p>
                                    <p>Barrio: @usuarioConDireccion.Barrio</p>
                                    <p>@usuarioConDireccion.CiudadNombre, @usuarioConDireccion.Departamento</p>
                                    @if (!string.IsNullOrEmpty(usuarioConDireccion.CodigoPostal))
                                    {
                                        <p>Código Postal: @usuarioConDireccion.CodigoPostal</p>
                                    }
                                </div>
                            </div>

                            <div class="info-note">
                                <p> Esta es tu dirección de envío registrada</p>
                            </div>
                        }
                        else
                        {
                            <div class="error-message">
                                <p>No tienes una dirección registrada. Por favor, actualiza tu perfil antes de continuar.</p>
                            </div>
                        }

                        <div class="form-actions">
                            <button class="btn-next"
                                    @onclick="SiguientePaso"
                                    disabled="@(!usuarioConDireccion?.IdDireccion.HasValue ?? true)">
                                Continuar →
                            </button>
                        </div>
                    </div>
                }

                @if (pasoActual == 2)
                {
                    <div class="form-section">
                        <h3>Método de Pago</h3>

                        @if (cargandoMetodos)
                        {
                            <div class="loading-small">
                                <div class="spinner-small"></div>
                                <p>Cargando métodos de pago...</p>
                            </div>
                        }
                        else
                        {
                            <div class="metodos-grid">
                                @foreach (var metodo in metodosPago)
                                {
                                    <div class="metodo-card @(metodoPagoSeleccionado == metodo.Id ? "selected" : "")"
                                         @onclick="() => SeleccionarMetodoPago(metodo.Id)">
                                        <div class="metodo-icon">@ObtenerIconoMetodo(metodo.Nombre)</div>
                                        <div class="metodo-nombre">@metodo.Nombre</div>
                                    </div>
                                }
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="error-message">
                                <p>@errorMessage</p>
                            </div>
                        }

                        <div class="form-actions">
                            <button class="btn-back-step" @onclick="PasoAnterior">
                                ← Atrás
                            </button>
                            <button class="btn-next" @onclick="SiguientePaso" disabled="@(metodoPagoSeleccionado == 0)">
                                Continuar →
                            </button>
                        </div>
                    </div>
                }

                @if (pasoActual == 3)
                {
                    <div class="form-section">
                        <h3>Confirmar Pedido</h3>

                        <div class="confirmacion-productos">
                            <h4>Productos en tu pedido:</h4>
                            @foreach (var item in items)
                            {
                                <div class="producto-mini">
                                    <div class="producto-mini-info">
                                        <strong>@item.NombreArticulo</strong>
                                        <span>@item.Talla / @item.Color</span>
                                        <span>x @item.Cantidad</span>
                                    </div>
                                    <div class="producto-mini-precio">
                                        @item.Subtotal.ToString("C")
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="confirmacion-detalles">
                            <div class="detalle-item">
                                <strong>Envío:</strong>
                                <span>@usuarioConDireccion?.DireccionCompleta</span>
                            </div>
                            <div class="detalle-item">
                                <strong>Método de pago:</strong>
                                <span>@ObtenerNombreMetodo(metodoPagoSeleccionado)</span>
                            </div>
                        </div>

                        @if (procesandoPedido)
                        {
                            <div class="procesando">
                                <div class="spinner-large"></div>
                                <p>Procesando tu pedido...</p>
                                <p class="procesando-info">Por favor espera, no cierres esta ventana</p>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="error-message">
                                <p>@mensajeError</p>
                            </div>
                        }

                        <div class="form-actions">
                            <button class="btn-back-step" @onclick="PasoAnterior" disabled="@procesandoPedido">
                                ← Atrás
                            </button>
                            <button class="btn-confirmar" @onclick="ConfirmarPedido" disabled="@procesandoPedido">
                                @if (procesandoPedido)
                                {
                                    <span>Procesando...</span>
                                }
                                else
                                {
                                    <span>Confirmar y Pagar</span>
                                }
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div class="checkout-resumen">
                <div class="resumen-card">
                    <h3>Resumen</h3>

                    <div class="resumen-linea">
                        <span>Productos (@totalProductos)</span>
                        <span>@subtotal.ToString("C")</span>
                    </div>

                    <div class="resumen-linea">
                        <span>Envío</span>
                        <span class="envio-gratis">GRATIS</span>
                    </div>

                    <div class="resumen-linea">
                        <span>IVA (19%)</span>
                        <span>@impuesto.ToString("C")</span>
                    </div>

                    <div class="resumen-divider"></div>

                    <div class="resumen-total">
                        <span>Total a pagar</span>
                        <span>@total.ToString("C")</span>
                    </div>

                    <div class="resumen-productos-lista">
                        <h4>@totalProductos productos</h4>
                        @foreach (var item in items)
                        {
                            <div class="producto-resumen">
                                <span>@item.NombreArticulo</span>
                                <span>@item.Cantidad</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<CarritoItemDTO> items = new();
    private List<MetodoPagoDTO> metodosPago = new();
    private int totalProductos = 0;
    private decimal subtotal = 0;
    private decimal impuesto = 0;
    private decimal total = 0;

    private int pasoActual = 1;
    private int metodoPagoSeleccionado = 0;
    private bool cargandoMetodos = false;
    private bool cargandoDireccion = false;
    private bool procesandoPedido = false;
    private string? errorMessage;
    private string? mensajeError;

    private int idUsuarioAutenticado = 0;
    private UsuarioConDireccionDTO? usuarioConDireccion;

    protected override async Task OnInitializedAsync()
    {
        var usuario = await Sesion.ObtenerUsuarioActual();

        if (usuario == null)
        {
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }

        idUsuarioAutenticado = usuario.IdUsuario;

        items = Carrito.ObtenerItems();
        ActualizarTotales();

        await CargarDireccionUsuario();
        await CargarMetodosPago();
    }

    private async Task CargarDireccionUsuario()
    {
        try
        {
            cargandoDireccion = true;

            var response = await UsuarioService.ObtenerUsuarioConDireccion(idUsuarioAutenticado);

            if (response.IsSuccess && response.Object != null)
            {
                usuarioConDireccion = response.Object;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar dirección: {ex.Message}");
        }
        finally
        {
            cargandoDireccion = false;
        }
    }

    private void ActualizarTotales()
    {
        totalProductos = Carrito.ObtenerCantidadTotal();
        subtotal = Carrito.ObtenerSubtotal();
        impuesto = Carrito.ObtenerImpuesto();
        total = Carrito.ObtenerTotal();
    }

    private async Task CargarMetodosPago()
    {
        try
        {
            cargandoMetodos = true;
            errorMessage = null;

            var response = await PedidoService.ObtenerMetodosPago();

            if (response.IsSuccess && response.ListObject != null)
            {
                metodosPago = response.ListObject.ToList();
            }
            else
            {
                errorMessage = response.Message ?? "Error al cargar métodos de pago";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            cargandoMetodos = false;
        }
    }

    private void SeleccionarMetodoPago(int idMetodo)
    {
        metodoPagoSeleccionado = idMetodo;
    }

    private string ObtenerIconoMetodo(string nombre)
    {
        return nombre.ToLower() switch
        {
            var n when n.Contains("efectivo") => "💵",
            var n when n.Contains("tarjeta") || n.Contains("débito") => "💳",
            var n when n.Contains("crédito") => "💳",
            var n when n.Contains("transferencia") => "🏦",
            var n when n.Contains("consignación") => "🏦",
            _ => "💰"
        };
    }

    private string ObtenerNombreMetodo(int idMetodo)
    {
        var metodo = metodosPago.FirstOrDefault(m => m.Id == idMetodo);
        return metodo?.Nombre ?? "No seleccionado";
    }

    private void SiguientePaso()
    {
        if (pasoActual < 3)
        {
            pasoActual++;
        }
    }

    private void PasoAnterior()
    {
        if (pasoActual > 1)
        {
            pasoActual--;
        }
    }

    private async Task ConfirmarPedido()
    {
        try
        {
            if (idUsuarioAutenticado <= 0)
            {
                mensajeError = "Error: Usuario no identificado. Por favor, inicia sesión nuevamente.";
                return;
            }

            if (!usuarioConDireccion?.IdDireccion.HasValue ?? true)
            {
                mensajeError = "Error: No tienes una dirección registrada.";
                return;
            }

            procesandoPedido = true;
            mensajeError = null;

            var pedido = new CrearPedidoDTO
            {
                IdUsuario = idUsuarioAutenticado,
                IdDireccionEnvio = usuarioConDireccion.IdDireccion.Value,
                IdMetodoPago = metodoPagoSeleccionado,
                Productos = items.Select(i => new ProductoPedidoDTO
                {
                    IdVariante = i.IdVariante,
                    Cantidad = i.Cantidad
                }).ToList()
            };

            var response = await PedidoService.CrearPedido(pedido);

            if (response.IsSuccess)
            {
                Carrito.Limpiar();
                Navigation.NavigateTo($"/pedido-confirmado/{response.Object}");
            }
            else
            {
                mensajeError = response.Message ?? "Error al crear el pedido";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            procesandoPedido = false;
        }
    }


    private void VolverAlCarrito()
    {
        Navigation.NavigateTo("/carrito");
    }

    private void IrAlCatalogo()
    {
        Navigation.NavigateTo("/ClienteCatalogo");
    }
}
