@page "/Bienvenida"
@using GUI.Components.Layout
@using GUI.Services
@using ENTITY.Usuarios
@layout AuthLayout
@inject SesionService SesionService
@inject NavigationManager Navigation

<div class="bienvenida-container">
    <div class="bienvenida-content">
        <div class="logo-animado">
            <span class="logo-icon">🛍️</span>
        </div>
        
        <h1 class="titulo-bienvenida">
            ¡Bienvenido@(esAdmin ? "" : "")!
        </h1>
        
        <div class="nombre-usuario">
            @nombreMostrar
        </div>
        
        <p class="subtitulo">
            @if (esAdmin)
            {
                <span>Panel de Administración</span>
            }
            else
            {
                <span>Gracias por visitarnos</span>
            }
        </p>
        
        <div class="loading-bar">
            <div class="loading-progress"></div>
        </div>
        
        <p class="texto-cargando">Cargando tu experiencia...</p>
    </div>
    
    <!-- Partículas decorativas -->
    <div class="particula particula-1">✨</div>
    <div class="particula particula-2">⭐</div>
    <div class="particula particula-3">💫</div>
    <div class="particula particula-4">✨</div>
    <div class="particula particula-5">⭐</div>
    <div class="particula particula-6">💫</div>
</div>

<style>
    .bienvenida-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        z-index: 9999;
    }

    .bienvenida-content {
        text-align: center;
        color: white;
        animation: fadeInUp 0.8s ease-out;
    }

    .logo-animado {
        animation: bounceIn 1s ease-out;
        margin-bottom: 2rem;
    }

    .logo-icon {
        font-size: 5rem;
        display: inline-block;
        animation: rotate 3s ease-in-out infinite;
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
    }

    .titulo-bienvenida {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 0 4px 6px rgba(0,0,0,0.3);
        animation: slideInLeft 0.8s ease-out;
    }

    .nombre-usuario {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(to right, #fff, #f0f0f0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: slideInRight 0.8s ease-out;
    }

    .subtitulo {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 2rem;
        animation: fadeIn 1s ease-out 0.5s both;
    }

    .loading-bar {
        width: 300px;
        height: 6px;
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        overflow: hidden;
        margin: 0 auto 1rem;
        animation: fadeIn 1s ease-out 0.7s both;
    }

    .loading-progress {
        height: 100%;
        background: linear-gradient(90deg, #fff, #f0f0f0);
        border-radius: 10px;
        animation: loading 2s ease-in-out;
        box-shadow: 0 0 10px rgba(255,255,255,0.5);
    }

    .texto-cargando {
        font-size: 0.9rem;
        opacity: 0.8;
        animation: pulse 1.5s ease-in-out infinite;
    }

    .particula {
        position: absolute;
        font-size: 2rem;
        opacity: 0;
        animation: floatParticle 3s ease-in-out infinite;
    }

    .particula-1 { top: 10%; left: 10%; animation-delay: 0s; }
    .particula-2 { top: 20%; right: 15%; animation-delay: 0.5s; }
    .particula-3 { bottom: 20%; left: 20%; animation-delay: 1s; }
    .particula-4 { top: 60%; right: 10%; animation-delay: 1.5s; }
    .particula-5 { bottom: 30%; right: 25%; animation-delay: 2s; }
    .particula-6 { top: 40%; left: 15%; animation-delay: 2.5s; }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }
        50% {
            transform: scale(1.05);
        }
        70% {
            transform: scale(0.9);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes rotate {
        0%, 100% {
            transform: rotate(0deg) scale(1);
        }
        25% {
            transform: rotate(-10deg) scale(1.1);
        }
        75% {
            transform: rotate(10deg) scale(1.1);
        }
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(50px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes loading {
        0% {
            width: 0%;
        }
        100% {
            width: 100%;
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.6;
        }
        50% {
            opacity: 1;
        }
    }

    @@keyframes floatParticle {
        0% {
            opacity: 0;
            transform: translateY(0) rotate(0deg);
        }
        50% {
            opacity: 1;
            transform: translateY(-20px) rotate(180deg);
        }
        100% {
            opacity: 0;
            transform: translateY(-40px) rotate(360deg);
        }
    }

    @@media (max-width: 768px) {
        .titulo-bienvenida {
            font-size: 2rem;
        }
        
        .nombre-usuario {
            font-size: 1.8rem;
        }
        
        .logo-icon {
            font-size: 3.5rem;
        }
        
        .loading-bar {
            width: 250px;
        }
    }
</style>

@code {
    private string nombreMostrar = "Cargando...";
    private bool esAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var usuario = await SesionService.ObtenerUsuarioActual();

            if (usuario != null)
            {
                // Verificar si es admin (IdRol == 1)
                esAdmin = usuario.IdRol == 1;

                if (esAdmin)
                {
                    nombreMostrar = "Administrador";
                }
                else
                {
                    // Extraer primer nombre y primer apellido
                    var partesNombre = usuario.NombreCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                    
                    if (partesNombre.Length >= 2)
                    {
                        nombreMostrar = $"{partesNombre[0]} {partesNombre[1]}";
                    }
                    else
                    {
                        nombreMostrar = usuario.NombreCompleto;
                    }
                }

                Console.WriteLine($"🎉 Bienvenida para: {nombreMostrar} (Admin: {esAdmin}, IdRol: {usuario.IdRol})");
            }
            else
            {
                nombreMostrar = "Invitado";
                Console.WriteLine("⚠️ No se encontró usuario en sesión");
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error en Bienvenida: {ex.Message}");
            nombreMostrar = "Usuario";
        }

        // Redirigir después de 2.5 segundos
        await Task.Delay(2500);
        
        if (esAdmin)
        {
            Console.WriteLine("➡️ Redirigiendo a AdminDashboard");
            Navigation.NavigateTo("/AdminDashboard", forceLoad: true);
        }
        else
        {
            Console.WriteLine("➡️ Redirigiendo a ClienteCatalogo");
            Navigation.NavigateTo("/ClienteCatalogo", forceLoad: true);
        }
    }
}
